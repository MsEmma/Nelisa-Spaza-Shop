<h1>Edit product</h1>

<form class="navbar-form navbar-left" role="search">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<form class="navbar-form navbar-left" action="/products/update/{{data.id}}" method="POST">
    <div class="form-group">
        <label for="">Category</label>
        <select class="" name="category_id">
            {{#categories}}
                <option {{selected}} value="{{id}}">{{category}}</option>
            {{/categories}}
        </select>
    </div>
    <div class="form-group">
        <label for="">Product</label>
        <input type="text" name="product" value="{{data.product}}">
    </div>
    
    <input type="submit" class="btn btn-default">Submit</button>>
</form>
