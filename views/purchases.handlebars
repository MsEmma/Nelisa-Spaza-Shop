<div class="container">

    <p><a class="btn btn-primary btn-lg" href="/purchases/add" role="button">ADD A PURCHASE</a></p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <!-- <th>Week</th> -->
                <th>Shop</th>
                <th>Product</th>
                <th>Category</th>
                <th>Quantity Bought</th>
                <th>Cost (R)</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        {{#purchases}}
            <tbody>
                <tr>
                    <td>{{date}}</td>
                    <!-- <td>{{week}}</td> -->
                    <td>{{shop}}</td>
                    <td>{{product}}</td>
                    <td>{{category}}</td>
                    <td>{{quantity}}</td>
                    <td>{{cost}}</td>
                    <td><a class="btn btn-default" href="/purchases/edit/{{id}}" role="button">EDIT</a></td>
                    <td><a class="btn btn-default" href="/purchases/delete/{{id}}">DELETE</a></td>
                </tr>
            </tbody>
        {{/purchases}}

    </table>

</div>
