<div class="container">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Week</th>
                <th>Shop</th>
                <th>Product</th>
                <th>Category</th>
                <th>Quantity Bought</th>
                <th>Cost (R)</th>
                <th>Total Cost (R)</th>
            </tr>
        </thead>

        {{#purchases}}
            <tbody>
                <tr>
                    <td>{{date}}</td>
                    <td>{{week}}</td>
                    <td>{{shop}}</td>
                    <td>{{product}}</td>
                    <td>{{category}}</td>
                    <td>{{quantity}}</td>
                    <td>{{cost}}</td>
                    <td>{{total_cost}}</td>
                </tr>
            </tbody>
        {{/purchases}}

    </table>

</div>
