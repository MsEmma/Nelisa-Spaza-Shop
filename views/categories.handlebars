<table class="table table-hover" style="width:50%" class="container">
    <thead>
        <tr>
            <th style="width:10%">Category List
                <a class="btn btn-default" href="/categories/add" role="button">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </th>
            <th style="width:5%"></th>
            <th style="width:5%"></th>
        </tr>
    </thead>

    {{#categories}}
        <tbody>
            <tr>
                <td>{{category}}</td>
                <td>
                    <a class="btn btn-default" href="/categories/edit/{{id}}" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
                <td>
                    <a class="btn btn-default" href="/categories/delete/{{id}}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        </tbody>
    {{/categories}}

</table>
