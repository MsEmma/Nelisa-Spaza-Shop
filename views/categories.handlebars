<div class="container">
    <div>
        <h4>CATEGORIES</h4>
    </div>

    <div class="row">
        <div class="col s4"><b>Category</b>
            <a class="btn btn-default" href="/categories/add" role="button">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>


    {{#categories}}
        <div class="row" class="bordered">
            <div class="col s3"><a href="/categories/edit/{{id}}">{{category}}</a></div>
            <div class="col s2">
                <a class="btn btn-default" href="/categories/delete/{{id}}">
                    <i class="material-icons">delete</i>
                </a>
            </div>
        </div>
    {{/categories}}
</div>
