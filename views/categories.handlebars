<div>
	<nav class="white">
		<div class="nav-wrapper">
			<ul>
				<li>
					<h5 class="nav-text black-text">Categories</h5>
				</li>
			</ul>
		</div>
	</nav>
</div>

<div class="container">
	<table class="bordered" class="bordered" class="responsive-table">

		<thead>
			<tr>
				<th>Category</th>
				<th></th>
				<th>
					<a class="btn btn-default" href="/categories/add" role="button" id="add">
						<i class="material-icons left">add</i>Add</a>
					</a>
				</th>
			</tr>
		</thead>

		{{#categories}}

			<tbody>
				<tr>
					<td>{{category}}</td>
					<td>
						<a class="btn btn-default" href="/categories/edit/{{id}}" role="button">
							<i class="material-icons left">mode_edit</i>Edit</a>
						</a>
					</td>
					<td>
						<a class="btn btn-default" href="/categories/delete/{{id}}">
							<i class="material-icons left">delete</i>Delete</a>
						</a>
					</td>
				</tr>
			</tbody>
		{{/categories}}

	</table>
</div>
