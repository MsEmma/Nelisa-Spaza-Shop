<div>
	<nav class="white">
		<div class="nav-wrapper">
			<ul>
				<li>
					<h5 class="nav-text black-text">Add Purchase</h5>
				</li>
			</ul>
		</div>
	</nav>
</div>

<div class="container">

	<form class="navbar-form navbar-left" action="/purchases/add" method="POST">

		<div>
			<label for="">Product&nbsp;</label>
			<select class="" name="product_id">
				{{#products}}
					<option class="btn btn-default" value="{{id}}">{{product}}</option>
				{{/products}}
			</select>
		</div>

		<div class="form-group">
			<label for="">Date &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
			<input type="date" name="date" value="{{data.date}}">
		</div>

		<div class="form-group">
			<label for="">Shop&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
			<input type="text" name="shop" value="{{data.shop}}">
		</div>

		<div class="form-group">
			<label for="">Cost &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
			<input type="number" name="cost" value="{{data.cost}}">
		</div>

		<div class="form-group">
			<label for="">Quantity</label>
			<input type="number" name="quantity" value="{{data.quantity}}">
		</div>

		<input class="btn btn-default" type="submit" value="Add">

	</form>
</div>
