<h2>ADD PURCHASE</h2>

<form class="navbar-form navbar-left" action="/purchases/add" method="POST">

	<div>
		<label for="">Product</label>
		<select class="" name="product_id">
			{{#products}}
				<option class="btn btn-default" value="{{id}}">{{product}}</option>
			{{/products}}
		</select>
	</div>

	<div class="form-group">
		<label for="">Date</label>
		<input type="date" name="date" value="{{data.date}}">
	</div>

	<div class="form-group">
		<label for="">Shop</label>
		<input type="text" name="shop" value="{{data.shop}}">
	</div>

	<div class="form-group">
		<label for="">Cost</label>
		<input type="number" name="cost" value="{{data.cost}}">
	</div>

	<div class="form-group">
		<label for="">Quantity</label>
		<input type="number" name="quantity" value="{{data.quantity}}">
	</div>

	<input type="submit">

</form>
