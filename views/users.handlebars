<div>
    <nav class="white">
        <div class="nav-wrapper">
            <ul>
                <li>
                    <h5 class="nav-text black-text">Users</h5>
                </li>
            </ul>
        </div>
    </nav>
</div>

<div class="container">

    <table class="bordered" class="responsive-table">
        <thead>
            <tr>
                <th>User</th>
                <th>Admin</th>
                <th>Locked</th>
                <th></th>
                <th>
                    <a class="btn btn-default" href="/users/add" role="button" id="add">
                        <i class="material-icons">add</i>
                    </a>
                </th>
            </tr>
        </thead>

        {{#users}}
            <tbody>
                <tr>
                    <td>{{username}}</td>
                    <td>{{admin}}</td>
                    <td>{{locked}}</td>
                    <td>
                        <a class="btn btn-default" href="/users/edit/{{id}}" role="button">
                            <i class="material-icons">mode_edit</i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-default" href="/users/delete/{{id}}">
                            <i class="material-icons">delete</i>
                        </a>
                    </td>
                </tr>
            </tbody>
        {{/users}}

    </table>
</div>
