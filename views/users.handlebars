<table class="table table-hover" style="width:60%" class="container">
    <thead>
        <tr>
            <th style="width:10%">User
                <a class="btn btn-default" href="/users/add" role="button">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </th>
            <th style="width:5%">Role</th>
            <th style="width:5%">Locked</th>
            <th style="width:5%"></th>
            <th style="width:5%"></th>
        </tr>
    </thead>

    {{#users}}
        <tbody>
            <tr>
                <td>{{username}}</td>
                <td>{{role}}</td>
                <td>{{locked}}</td>
                <td>
                    <a class="btn btn-default" href="/users/edit/{{id}}" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
                <td>
                    <a class="btn btn-default" href="/users/delete/{{id}}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        </tbody>
    {{/users}}

</table>
