<h4>ADD SALES</h4>

<form class="navbar-form navbar-left" action="/sales/add" method="POST">

    <div>
        <label for="">Product &nbsp;&nbsp;&nbsp;&nbsp;</label>
        <select class="" name="product_id">
            {{#products}}
                <option class="btn btn-default" value="{{id}}">{{product}}</option>
            {{/products}}
        </select>
    </div>

    <div class="form-group">
        <label for="">Date &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
        <input type="date" name="date" value="{{data.date}}">
    </div>

    <div class="form-group">
        <label for="">Sold &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
        <input type="number" placeholder="Sold" name="sold" value="{{data.sold}}">
    </div>

    <div class="form-group">
        <label for="">Sales Price</label>
        <input type="number" placeholder="Price" name="price" value="{{data.price}}">
    </div>

    <input type="submit" value="Add">

</form>
