<table class="table table-hover" style="width:60%" class="container">
    <thead>
        <tr>
            <th style="width:10%">Product
                <a class="btn btn-default" href="/products/add" role="button">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </th>
            <th style="width:10%">Category</th>
            <th style="width:5%"></th>
            <th style="width:5%"></th>
        </tr>
    </thead>

    {{#products}}
        <tbody>
            <tr>
                <td>{{product}}</td>
                <td>{{category}}</td>
                <td>
                    <a class="btn btn-default" href="/products/edit/{{id}}" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
                <td>
                    <a class="btn btn-default" href="/products/delete/{{id}}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        </tbody>
    {{/products}}

</table>
