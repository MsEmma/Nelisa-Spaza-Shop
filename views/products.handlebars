<div class="container">

      <div>

        <form class="navbar-form navbar-left" action="/products/search" method="POST">

            <div class="form-group">

                <input type="text" class="form-control" placeholder="search" name="product">
                <label for=""><span class="glyphicon glyphicon-search" aria-hidden="true"></span></label>
            </div>

            <input type="submit" value="search">

        </form>
    </div>

    <div>

        <table class="table table-hover">

            <thead>
                <tr>
                    <th>Product
                        <a class="btn btn-default" href="/products/add" role="button">
                            <i class="material-icons">add</i>
                        </a>
                    </th>
                    <th>Category</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            {{#products}}
                <tbody>
                    <tr>
                        <td>{{product}}</td>
                        <td>{{category}}</td>
                        <td>
                            <a class="btn btn-default" href="/products/edit/{{id}}" role="button">
                                <i class="material-icons">mode_edit</i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-default" href="/products/delete/{{id}}">
                                <i class="material-icons">delete</i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            {{/products}}

        </table>

    </div>
</div>
