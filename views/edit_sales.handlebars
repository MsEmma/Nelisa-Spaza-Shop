<div>
	<nav class="white">
		<div class="nav-wrapper">
			<ul>
				<li>
					<h5 class="nav-text black-text">Edit Sale</h5>
				</li>
			</ul>
		</div>
	</nav>
</div>

<div class="container">

    <form class="navbar-form navbar-left" action="/sales/update/{{data.id}}" method="POST">
        <div>
            <label for="">Product &nbsp;&nbsp;&nbsp;&nbsp;</label>
            <select class="" name="product_id">
                {{#products}}
                    <option {{selected}} value="{{id}}">{{product}}</option>
                {{/products}}
            </select>
        </div>

        <div class="form-group">
            <label for="">Date &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input class="date-picker" type="text" name="date" value="{{data.date}}">
        </div>

        <div class="form-group">
            <label for="">Sold &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input type="number" name="sold" value="{{data.sold}}">
        </div>

        <div class="form-group">
            <label for="">Sales Price</label>
            <input type="number" name="price" value="{{data.price}}">
        </div>

        <div>
            <input class="btn btn-default" type="submit" value="Edit">
        </div>
    </form>
</div>

<script src="/js/tiny-date-picker.min.js"></script>
<script>
	var options = {year: "numeric",month: "2-digit",day: "2-digit"};
	TinyDatePicker(document.querySelector('.date-picker'), {
		format: function(date) {
			return date.toLocaleDateString('en-CA', options);
		}
	});
</script>
