<div class="container">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Day</th>
                <th>Date</th>
                <th>Week</th>
                <th>Product</th>
                <th>Category</th>
                <th>Quantity Sold</th>
                <th>Selling Price (R)</th>
            </tr>
        </thead>

        {{#sales}}
            <tbody>
                <tr>
                    <td>{{day}}</td>
                    <td>{{date}}</td>
                    <td>{{week}}</td>
                    <td>{{product}}</td>
                    <td>{{category}}</td>
                    <td>{{sold}}</td>
                    <td>{{sales_price}}</td>
                </tr>
            </tbody>
        {{/sales}}

    </table>

</div>
